<!DOCTYPE html>
<html>
<head>
    <% include templates/header.ejs %>
    <script src="../ckeditor/ckeditor.js"></script>
    <title>Accueil</title>
</head>
<body>
<header>
    <% include templates/navBar.ejs %>
</header>
<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <form action="/edition/updateProfil" method="post">
                <div class="well" align="center">
                    <input type="text" name="NomPrenom" class="form-control" placeholder="Votre nom" <% if (doc.nom ) { %> value="<%= doc.nom %>" <%}%>/>
                </div>
                <div class="well">
                    <h4><label>Présentation :</label></h4>
                    <textarea rows="6" name="presentation" class="form-control"  ><%= doc.pres %></textarea><br>
                </div>
                <div class="well">
                    <h4><label>Grade :</label></h4>
                    <select class="form-control" name="grade">
                        <option <% if (doc.grade === 'Professeur'){%>  selected <%}%> >Professeur</option>
                        <option <% if (doc.grade === 'Maitre de conférence A'){%>  selected <%}%> >Maitre de conférence A</option>
                        <option <% if (doc.grade === 'Maitre de conférence B'){%>  selected <%}%> >Maitre de conférence B</option>
                        <option <% if (doc.grade === 'Maitre assistant A'){%>  selected <%}%> >Maitre assistant A</option>
                        <option <% if (doc.grade === 'Maitre assistant B'){%>  selected <%}%> >Maitre assistant B</option>
                        <option <% if (doc.grade === 'Doctorant'){%>  selected <%}%> >Doctorant</option>
                    </select>
                    <h4><label>E-mail :</label></h4>
                    <input type="email" name="email" class="form-control"  value="<%= doc.email %>" ><br>
                    <h4><label>Bureau : </label></h4>
                    <input type="text" name="bureau" class="form-control"  value="<%= doc.bureau %>" >
                </div>
                <button type="submit" class="btn btn-default">Editer</button>
            </form>
        </div>


        <div class="col-lg-9">
            <div>
                <ul class="nav nav-tabs">
                    <%  doc.rubriques.forEach(function (rub){ %>
                    <li <% if(rub.titre === doc.rubriques[0].titre ){%>class="active" <%} %> ><a data-toggle="tab" href="#<%= rub._id %>"><%= rub.titre %></a></li>
                    <% }) %>
                    <li><a data-toggle="tab" href="#AjoutArticle">ajouter un articles</a></li>
                    <li><a data-toggle="tab" href="#AjoutRubrique">ajouter une rubrique</a></li>
                </ul>
            </div> <% //Div navigation tabbed panel %>


            <div class="tab-content">
                <% doc.rubriques.forEach(function (rub){ %>

                <div id="<%= rub._id %>" class="tab-pane <% if(rub._id === doc.rubriques[0]._id ){%>active<%} %>">
                    <br><br>
                    <div class="container-fluid">

                        <div class="row">
                            <% rub.articles.reverse().forEach(function(art){ %>
                            <div class="col-sm-12">
                                <a href="/edition/deleteArticle?IDRubrique=<%=rub._id%>&IDArticle=<%=art._id%>" onclick="return confirm('êtes vous sur de vouloir supprimer cet Article ?');"> Supprimer</a>
                                <a href="/edition/article?IDRubrique=<%=rub._id%>&IDArticle=<%=art._id%>">Editer</a>
                                <div class="well" align="left">
                                    <h2><%= art.titre %></h2>
                                    <div><%- art.contenu %></div>
                                </div>
                            </div>
                            <%})%>
                        </div>
                    </div>

                </div>
                <% }) %>

                <div id="AjoutArticle" class="tab-pane">
                    <br><br>
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="well" align="left">
                                    <form action="/edition/AddArticle" method="post">
                                        <h2>Ajouter un article</h2>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-sm-4">
                                                    <label for="nomRubrique">Rubrique:</label>
                                                    <select class="form-control" name="nomRubrique">
                                                        <% doc.rubriques.forEach(function (doc) { %>
                                                        <option><%= doc.titre %></option>
                                                        <%})%>
                                                    </select>
                                                </div>
                                                <div class="col-sm-8">
                                                    <label>Titre:</label>
                                                    <input type="text" class="form-control" name="titreA">
                                                </div>
                                            </div>
                                            <br>
                                            <label for="summernote">Contenu:</label>
                                            <textarea cols="10" id="Contenu" name="contenu" rows="10" >Mon editeur de texte</textarea>

                                            <script>
                                                //Ajout d'uploadcare à ckediteur
                                                UPLOADCARE_PUBLIC_KEY = 'demopublickey';
                                                CKEDITOR.replace( 'Contenu' , {
                                                    extraPlugins: 'uploadcare',
                                                    uploadcare: {
                                                        multiple: true
                                                    }
                                                });

                                            </script>
                                            <div align="center">
                                                <button type="submit" class="btn btn-default" >Ajouter l'article</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>

                <div id="AjoutRubrique" class="tab-pane">
                    <br><br><br>
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="well">
                                    <table class="table table-condensed">
                                        <thead>
                                        <tr>
                                            <th>Nom de la rubrique</th>
                                            <th>Nombre d'articles</th>
                                            <th>Actions</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr>

                                        </tr>
                                        <% doc.rubriques.forEach(function (doc) {%>
                                        <tr>
                                            <td><%= doc.titre %></td>
                                            <td><%= doc.articles.length %></td>
                                            <td>
                                                <a href="edition/deleteRubrique?id=<%=doc._id%>">Supprimer</a>
                                                <a href="#" data-toggle="modal" data-target="#update-modal<%=doc._id%>" ><span ></span>Renommer</a></li>
                                                <div class="modal fade" id="update-modal<%=doc._id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
                                                    <div class="modal-dialog">
                                                        <br><br><br><br><br><br>
                                                        <div class="col-sm-9 well" align="center">
                                                            <div class="login-clean">
                                                                <form class="form-horizontal" action="/edition/updateRubrique" method="post">
                                                                    <div class="illustration"></div>
                                                                    <div class="form-group">
                                                                        <label class="control-label col-sm-5" for="User">Titre de la rubrique :</label>
                                                                        <div class="col-sm-7">
                                                                            <input type="text" class="form-control" id="User" placeholder="Nouveau titre" name="NewTitre" value="<%=doc.titre%>">
                                                                            <input type="hidden" value="<%=doc._id%>" name="idRubrique">
                                                                        </div>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <div class="col-sm-offset-2 col-sm-10">
                                                                            <button type="submit" class="btn btn-default">Modifier</button>
                                                                        </div>
                                                                    </div>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        <% }) %>

                                        </tbody>
                                    </table>

                                </div>

                                <form action="/edition/AddRubrique" method="post">
                                    <div class="well">
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <label>Ajouter une rubrique:</label>
                                                </div>
                                                <div class="col-sm-6">
                                                    <input type="text" class="form-control" name="titreRubrique" placeholder="Nom de la nouvelle rubrique">
                                                </div>
                                                <div class="col-sm-6">
                                                    <button type="submit" class="btn btn-default" >Ajouter la rubrique</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>

                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>
<footer>
    <% include templates/footer.ejs %>
</footer>
</body>
</html>

